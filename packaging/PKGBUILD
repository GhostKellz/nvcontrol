# Maintainer: Christopher Kelley <ckelley@ghostkellz.sh>
pkgname=nvcontrol
pkgver=0.6.1
pkgrel=1
pkgdesc="Modern NVIDIA GPU control with DLSS 3, Frame Generation, and native Wayland support"
arch=('x86_64')
url="https://github.com/ghostkellz/nvcontrol"
license=('MIT')
depends=('nvidia-utils' 'wayland' 'systemd')
makedepends=('rust' 'cargo')
optdepends=('gamescope: Enhanced gaming compositor support'
          'mangohud: Gaming overlay integration'
          'steam: Auto-detection for game profiles')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
    cargo build --release --locked
}

check() {
    cd "$pkgname-$pkgver"
    cargo test --release --locked
}

package() {
    cd "$pkgname-$pkgver"
    
    # Install binaries
    install -Dm755 target/release/nvcontrol "$pkgdir/usr/bin/nvcontrol"
    install -Dm755 target/release/nvctl "$pkgdir/usr/bin/nvctl"
    
    # Install desktop file
    install -Dm644 packaging/nvcontrol.desktop "$pkgdir/usr/share/applications/nvcontrol.desktop"
    
    # Install icons from assets/icons directory
    for size in 16 32 48 64 128 256 512; do
        if [ -f "assets/icons/icon-${size}x${size}.png" ]; then
            install -Dm644 "assets/icons/icon-${size}x${size}.png" "$pkgdir/usr/share/icons/hicolor/${size}x${size}/apps/nvcontrol.png"
        fi
    done

    # Install main logo as fallback
    if [ -f "assets/icons/nvctl_logo.png" ]; then
        install -Dm644 "assets/icons/nvctl_logo.png" "$pkgdir/usr/share/pixmaps/nvcontrol.png"
    fi

    # Install shell completions
    install -dm755 "$pkgdir/usr/share/bash-completion/completions"
    install -dm755 "$pkgdir/usr/share/zsh/site-functions"
    install -dm755 "$pkgdir/usr/share/fish/vendor_completions.d"

    if [ -f "completions/nvctl.bash" ]; then
        install -Dm644 "completions/nvctl.bash" "$pkgdir/usr/share/bash-completion/completions/nvctl"
    fi
    if [ -f "completions/_nvctl" ]; then
        install -Dm644 "completions/_nvctl" "$pkgdir/usr/share/zsh/site-functions/_nvctl"
    fi
    if [ -f "completions/nvctl.fish" ]; then
        install -Dm644 "completions/nvctl.fish" "$pkgdir/usr/share/fish/vendor_completions.d/nvctl.fish"
    fi
    
    # Install documentation
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    install -Dm644 DOCS.md "$pkgdir/usr/share/doc/$pkgname/DOCS.md"
    install -Dm644 COMMANDS.md "$pkgdir/usr/share/doc/$pkgname/COMMANDS.md"
    
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}